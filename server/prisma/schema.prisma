// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  fullname   String
  email      String
  password   String
  image      String?
  tasks      Task[]
  categories Category[]
  SharedTask SharedTask[]
}

model Task {
  id         Int          @id @default(autoincrement())
  title      String
  date       DateTime     @db.Date
  time       DateTime     @db.Time(0)
  reminder   DateTime?
  createdAt  DateTime     @default(now())
  notes      String
  isDone     Boolean      @default(false)
  category   Category?    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int?
  User       User?        @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  createdBy  Int
  SharedTask SharedTask[]
}

// select * from tasks left join sharedTask on tasks.id = sharedTask.taskId where sharedTask.userId = 1 OR task.userId = 1

model SharedTask {
  id         Int  @id @default(autoincrement())
  taskId     Int
  sharedWith Int
  task       Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user       User @relation(fields: [sharedWith], references: [id], onDelete: Cascade)
}

// https://javascript.plainenglish.io/add-emoji-to-your-angular-application-c753e0d5cf84
model Category {
  id     Int    @id @default(autoincrement())
  icon   String
  name   String
  tasks  Task[]
  User   User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int?
}

model Sessions {
  session_id String @id
  expires    Int
  data       String @db.MediumText
}
